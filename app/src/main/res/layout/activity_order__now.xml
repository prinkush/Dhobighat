<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/ivordernow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/arrow"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ORDER NOW"
        android:gravity="center"
        android:textColor="#fff"
        android:background="#0a1b7a"
        android:textSize="40dp"
        android:textStyle="bold"/>
        </LinearLayout>
    <TextView
        android:textColor="#c73333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services"
        android:layout_marginTop="5dp"
        android:textSize="35dp" />
    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <RadioButton
            android:id="@+id/Rbt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wash"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/Rbt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wash &amp; Fold"
            android:textSize="20dp"/>


        <RadioButton
            android:id="@+id/Rbt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DryClean"
            android:textSize="20dp"
           />
    </RadioGroup>
    <TextView
        android:textColor="#e93b3b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill Pickup Details"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvPD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_marginTop="4dp"
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></Spinner>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Spinner
        android:layout_marginTop="4dp"
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></Spinner>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pickup Time"
            android:textSize="25dp"/>

    <TimePicker
        android:id="@+id/tp"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:timePickerMode="spinner"
        android:layout_weight="0.38">


    </TimePicker>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        />
      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/etADD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnBook"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Your Wash"
        android:textColor="#fff"
        android:textSize="20dp"
        android:background="#0a1b7a"/>


</LinearLayout>
